{
  "name": "boardgamebuddy-game-packs",
  "version": "0.0.1",
  "private": true,
  "description": "Community game packs for BoardGameBuddy",
  "workspaces": ["api", "cli"],
  "scripts": {
    "test": "jest",
    "serve": "node ./serve.js",
    "build": "for dir in games/*/; do [ -f \"${dir}scorer.ts\" ] && npx tsc \"${dir}scorer.ts\" --target ES2017 --module commonjs --outDir \"$dir\" --skipLibCheck; done",
    "watch": "npx tsc --watch --project tsconfig.json"
  },
  "devDependencies": {
    "@boardgamebuddy/game-pack-api": "*",
    "jest": "^29.0.0",
    "typescript": "^5.9.3",
    "qrcode-terminal": "^0.12.0"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ]
  }
}